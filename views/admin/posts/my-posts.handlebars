<h1>My Posts</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>File</th>
            <th>Title</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
            <tr>
                <td>{{_id}}</td>
                <td><img src="/uploads/{{file}}" height="60"></td>
                <td>{{title}}</td>
                <td>{{status}}</td>
                <td>{{category._id}} {{category.name}}</td>
                <td>{{allowComments}}</td>
                <td>{{generateTime date 'MMMM Do YYYY'}}</td>
                <td><a href="/post/{{_id}}">View</a></td>
                <td>
                    <a
                        href="/admin/posts/edit/{{_id}}"
                        class="btn btn-info"
                    >
                        Edit
                    </a>
                </td>
                <td>
                    <form
                        action="/admin/posts/{{_id}}?_method=DELETE"
                        method="post"
                    >
                        <button
                            type="submit"
                            class="btn btn-danger"
                        >
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>
