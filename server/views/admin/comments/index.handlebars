<h1>Comments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Status</th>
            <th>Body</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each comments}}
            <tr>
                <th scope="row">{{_id}}</th>
                <td>{{user.firstName}}</td>
                <td>
                    <input
                        data-id="{{_id}}"
                        name="approveComment"
                        type="checkbox"
                        {{#if approveComment}} checked {{/if}}
                    >
                </td>
                <td>{{body}}</td>
                <td>{{generateTime date 'MMMM Do YYYY'}}</td>
                <td>
                    <form
                        action="/admin/comments/{{_id}}?_method=DELETE"
                        method="post"
                    >
                        <button
                            type="submit"
                            class="btn btn-danger"
                        >
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>